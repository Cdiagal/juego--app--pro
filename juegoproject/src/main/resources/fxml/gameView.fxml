<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="es.cdiagal.quiz.backend.controller.QuestionGameController" prefWidth="600" prefHeight="600">

    <!-- Etiqueta para la pregunta -->
    <VBox layoutX="50" layoutY="30" prefWidth="500" spacing="10">
        <Label fx:id="questionLabel" wrapText="true" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <ProgressBar fx:id="timerBar" prefWidth="500" progress="1.0" />
    </VBox>

    <!-- Grid para las 4 opciones -->
    <GridPane layoutX="50" layoutY="100" hgap="20" vgap="20" prefWidth="500" prefHeight="400">
        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="50" />
            <RowConstraints percentHeight="50" />
        </rowConstraints>

        <Pane fx:id="optionPane1" styleClass="option-pane" onMouseClicked="#handleOption1">
            <Label fx:id="optionLabel1" wrapText="true" style="-fx-font-size: 16px;" />
        </Pane>
        <Pane fx:id="optionPane2" styleClass="option-pane" onMouseClicked="#handleOption2" GridPane.columnIndex="1">
            <Label fx:id="optionLabel2" wrapText="true" style="-fx-font-size: 16px;" />
        </Pane>
        <Pane fx:id="optionPane3" styleClass="option-pane" onMouseClicked="#handleOption3" GridPane.rowIndex="1">
            <Label fx:id="optionLabel3" wrapText="true" style="-fx-font-size: 16px;" />
        </Pane>
        <Pane fx:id="optionPane4" styleClass="option-pane" onMouseClicked="#handleOption4" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <Label fx:id="optionLabel4" wrapText="true" style="-fx-font-size: 16px;" />
        </Pane>
    </GridPane>

    <!-- Feedback -->
    <Label fx:id="feedbackLabel" layoutX="50" layoutY="520" prefWidth="500" style="-fx-font-size: 16px; -fx-text-fill: green;" textAlignment="CENTER" alignment="CENTER" />

    <!-- BotÃ³n para salir -->
    <Button fx:id="exitButton" layoutX="480" layoutY="20" text="Salir" onAction="#handleExit" />

</AnchorPane>
