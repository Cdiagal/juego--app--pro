<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="background-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.cdiagal.quiz.controller.backend.SummaryController">
    <top>
        <Label styleClass="title-label" text="Resumen de Partida" />
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10" stylesheets="@../styles/styles.css">
            <Label fx:id="scoreResultLabel" text="Puntuación: 0" />
            <Label fx:id="hitsLabel" text="Aciertos: 0" />
            <Label fx:id="failsLabel" text="Errores: 0" />
            <Button fx:id="backToMenuBtn" styleClass="main-button" text="Volver al Menú" />
        </VBox>
    </center>
</BorderPane>
