<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="es.cdiagal.quiz.backend.controller.GameController"
            prefHeight="600.0" prefWidth="600.0">
    
    <Text layoutX="200" layoutY="60" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="¡Bienvenido al Juego!" />

    <Label fx:id="preguntaLabel" layoutX="50" layoutY="120" wrapText="true" 
           prefWidth="500" style="-fx-font-size: 18px;" text="Aquí se mostrará la pregunta..." />

    <!-- Botones de respuesta-->
    <Button layoutX="50" layoutY="200" text="Opción A" prefWidth="200" />
    <Button layoutX="50" layoutY="250" text="Opción B" prefWidth="200" />
    <Button layoutX="50" layoutY="300" text="Opción C" prefWidth="200" />
    <Button layoutX="50" layoutY="350" text="Opción D" prefWidth="200" />

    <Button layoutX="450" layoutY="500" text="Salir" onAction="#salirDelJuego" />
</AnchorPane>
